<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniversityApp.CourseView"
             Title="Course View">
    <ScrollView>
        <VerticalStackLayout Padding="5">
            <Entry x:Name="courseTitle" Text="Course Title" HorizontalOptions="Center" HorizontalTextAlignment="Center" FontSize="32"/>
            <HorizontalStackLayout Spacing="15">
                <Label Text="Course Start Date:" HorizontalOptions="Center" VerticalOptions="Center" HorizontalTextAlignment="Center" FontSize="20"/>
                <DatePicker x:Name="courseStart" HorizontalOptions="Center" VerticalOptions="Center"></DatePicker>
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="15">
                <Label Text="Course End Date:" HorizontalOptions="Center" VerticalOptions="Center" HorizontalTextAlignment="Center" FontSize="20"/>
                <DatePicker x:Name="courseEnd" HorizontalOptions="Center" VerticalOptions="Center"></DatePicker>
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Label Text="Course Status" HorizontalOptions="Center" VerticalOptions="Center" HorizontalTextAlignment="Center" FontSize="20"/>
                <Picker x:Name="courseStatus" HorizontalOptions="Center" VerticalOptions="Center"></Picker>
            </HorizontalStackLayout>
            <Border Stroke="Gray"
                    StrokeThickness="3"
                    Padding="5">
                <VerticalStackLayout>
                    <Label Text="Course Instructor Information:" FontAttributes="Bold" FontSize="Medium" />
                    <Label Text="Instructor Name:" />
                    <Entry x:Name="instructorName" Placeholder="Name" Text="Anna"/>
                    <Label Text="Instructor Phone:" />
                    <Entry x:Name="instructorPhone" Placeholder="Phone"/>
                    <Label Text="Instructor Email:" />
                    <Entry x:Name="instructorEmail" Placeholder="Email"/>
                </VerticalStackLayout>
            </Border>
            <Border Stroke="Gray"
                    StrokeThickness="3"
                    Padding="5">
                <VerticalStackLayout>
                    <Label Text="Notifications" FontSize="Medium" FontAttributes="Bold"/>
                    <Label Text="Start Date Notifications:" FontSize="Small" />
                    <Picker></Picker>
                    <Label Text="End Date Notifications:" FontSize="Small" />
                    <Picker></Picker>
                </VerticalStackLayout>
            </Border>
            <Border Stroke="Gray"
                    StrokeThickness="3"
                    Padding="5">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Course Notes" FontSize="Medium" FontAttributes="Bold"/>
                    <Button Text="Add Note"/>
                    <Button Text="Display Notes"/>
                </VerticalStackLayout>
            </Border>
            <Border  Stroke="Gray"
                     StrokeThickness="3"
                     Padding="5">
                <VerticalStackLayout>
                    <Label Text="Assessments" FontSize="Medium" FontAttributes="Bold"/>
                    <Border  Stroke="Gray"
                                StrokeThickness="3"
                             Padding="5">
                        <VerticalStackLayout>
                            <Label Text="Performance Assessment" FontSize="Medium"/>
                            <Entry x:Name="paName" Text="Assessment Name"/>
                            <Label Text="Start Date Notifications:" FontSize="Small" />
                            <Picker></Picker>
                            <Label Text="End Date Notifications:" FontSize="Small" />
                            <Picker></Picker>
                        </VerticalStackLayout>
                    </Border>
                    <Border  Stroke="Gray"
                            StrokeThickness="3"
                             Padding="5">
                        <VerticalStackLayout>
                            <Label Text="Objective Assessment" FontSize="Medium"/>
                            <Entry x:Name="oaName" Text="Assessment Name"/>
                            <Label Text="Start Date Notifications:" FontSize="Small" />
                            <Picker></Picker>
                            <Label Text="End Date Notifications:" FontSize="Small" />
                            <Picker></Picker>
                        </VerticalStackLayout>
                    </Border>
                </VerticalStackLayout>
            </Border>
            <Button Text="Detailed View" Padding="40"></Button>
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>